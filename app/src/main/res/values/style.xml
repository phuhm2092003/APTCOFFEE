<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Theme Status Bar white  -->
    <style name="AppStatusBarWhite" parent="Theme.APTCOFFEE">
        <item name="android:statusBarColor">@color/WhitePrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
    <!--  Theme Status Bar Gray -->
    <style name="AppStatusBarGray" parent="Theme.APTCOFFEE">
        <item name="android:statusBarColor">@color/GrayPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
    <!--Font family bottomNavigationView-->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Custom toast -->
    <style name="successfulToast">
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/inter_regular</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">@color/GreenPrimary</item>
        <item name="stIconStart">@drawable/ic_checkbox_circle_line</item>
        <item name="stRadius">30dp</item>
    </style>
    <style name="errorToast">
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/inter_regular</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">@color/YellowPrimary</item>
        <item name="stIconStart">@drawable/ic_error_warning_line</item>
        <item name="stRadius">30dp</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/Gray1Primary</item>
        <item name="colorControlActivated">@color/YellowPrimary</item>
    </style>
</resources>